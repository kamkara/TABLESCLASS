
<%= simple_form_for(@school) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :describre %>
    <%= f.input :type %>
    <%= f.input :code_school %>
    <%= f.input :sigle %>
    <%= f.input :slug %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
