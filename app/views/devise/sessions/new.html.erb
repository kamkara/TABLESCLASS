<div class="container">
  <div class="col-12 col-md-8 col-lg-8 offset-md-2">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class:"form-control" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class:"form-control" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "CONNEXION", class:"btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>
